<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ethanco.iconviewsample.MainActivity">

    <com.ethanco.iconview.IconView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:canClick="true"
        app:iconSrc="@mipmap/ic_test_20"
        app:iconText="IconView"
        app:iconTextColor="@color/colorAccent" />

    <com.ethanco.iconview.IconView
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        app:canClick="true"
        app:iconSrc="@drawable/selector_icon"
        app:iconText="IconView"
        app:iconTextColor="@drawable/selector_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="XOXOXO"
        android:textColor="@drawable/selector_text"
        android:textSize="30sp" />
</LinearLayout>
